<Window x:Class="WebCam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WebCam Selfier" Height="407" Width="525" Closing="Window_Closing" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="StartCapture_Button" Content="Начать получать изображение" Margin="10,65,10,0" VerticalAlignment="Top" Height="24" Click="Get_WebCamImage_Click" IsEnabled="False"/>
        <Image x:Name="CapturedImage_Image" Margin="10,143,0,0" HorizontalAlignment="Left" Width="497" Height="221" VerticalAlignment="Top"/>
        <Button x:Name="SaveImage_Button" Content="Сохранить кадр" Margin="10,94,10,0" VerticalAlignment="Top" RenderTransformOrigin="-1.782,0.033" Height="24" IsEnabled="False" Click="SaveImage_Button_Click"/>
        <CheckBox x:Name="IsMirrorred_CheckBox" Content="Зеркальное отображение" HorizontalAlignment="Left" Margin="10,123,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="Devices_ComboBox" Margin="10,11,10,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" SelectionChanged="Devices_ComboBox_SelectionChanged"/>
        <ComboBox x:Name="Resolutions_ComboBox" Margin="10,38,10,0" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
